<UserControl
    x:Class="MyTodo.Modules.Todo.Views.TodoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignWidth="1200"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <materialDesign:DialogHost>
        <materialDesign:DrawerHost IsRightDrawerOpen="{Binding IsRightDrawerOpen}">
            <materialDesign:DrawerHost.RightDrawerContent>
                <StackPanel Width="250" Margin="25">
                    <TextBlock
                        FontSize="20"
                        FontWeight="Bold"
                        Text="添加待办" />
                    <StackPanel Margin="0,10" Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Text="状态:" />
                        <ComboBox SelectedIndex="0">
                            <ComboBoxItem>待办</ComboBoxItem>
                            <ComboBoxItem>已完成</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    <TextBox materialDesign:HintAssist.Hint="请输入待办事项标题" />
                    <TextBox
                        Height="200"
                        Margin="0,10,0,20"
                        VerticalContentAlignment="Top"
                        materialDesign:HintAssist.Hint="请输入待办内容"
                        AcceptsReturn="True"
                        TextWrapping="Wrap" />
                    <Button Content="添加到待办" />
                </StackPanel>
            </materialDesign:DrawerHost.RightDrawerContent>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <StackPanel Margin="15,10" Orientation="Horizontal">
                    <TextBox
                        VerticalAlignment="Center"
                        materialDesign:HintAssist.Hint="查找待办事项..."
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        FontSize="16" />
                    <TextBlock
                        Margin="20,0,10,0"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Text="筛选:" />
                    <ComboBox FontSize="15" SelectedIndex="0">
                        <ComboBoxItem>全部</ComboBoxItem>
                        <ComboBoxItem>待办</ComboBoxItem>
                        <ComboBoxItem>已完成</ComboBoxItem>
                    </ComboBox>
                </StackPanel>

                <Button
                    Margin="10,0"
                    HorizontalAlignment="Right"
                    Command="{Binding OpenRightDrawerCommand}"
                    Content="添加待办" />

                <ScrollViewer
                    Grid.Row="1"
                    Margin="10"
                    HorizontalAlignment="Center"
                    HorizontalScrollBarVisibility="Disabled"
                    VerticalScrollBarVisibility="Hidden">
                    <ItemsControl ItemsSource="{Binding TodoItems}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="5"
                                    Background="{StaticResource MaterialDesign.Brush.Primary.Light}"
                                    CornerRadius="5">
                                    <Grid Width="220" Height="180">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <TextBlock
                                            Margin="10"
                                            VerticalAlignment="Center"
                                            FontWeight="Bold"
                                            Text="{Binding Title}" />
                                        <materialDesign:PopupBox
                                            Margin="10"
                                            HorizontalAlignment="Right"
                                            Panel.ZIndex="1">
                                            <Button Content="删除" />
                                        </materialDesign:PopupBox>
                                        <TextBlock
                                            Grid.Row="1"
                                            Margin="10,0,10,10"
                                            Text="{Binding Content}" />
                                        <Canvas Grid.RowSpan="2" ClipToBounds="True">
                                            <Ellipse
                                                Canvas.Top="20"
                                                Canvas.Right="-40"
                                                Width="120"
                                                Height="120"
                                                Fill="White"
                                                Opacity="0.1" />
                                            <Ellipse
                                                Canvas.Top="80"
                                                Canvas.Right="-10"
                                                Width="120"
                                                Height="120"
                                                Fill="White"
                                                Opacity="0.1" />
                                        </Canvas>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </materialDesign:DrawerHost>
    </materialDesign:DialogHost>
</UserControl>
